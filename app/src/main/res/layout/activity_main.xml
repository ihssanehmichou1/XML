<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewnom"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="84dp"
        android:text="nom:"
        app:layout_constraintBottom_toBottomOf="@+id/editTextTextnom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editTextTextnom"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="64dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/textViewprenom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textViewprenom"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="32dp"
        android:text="Prenom:"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextprenom"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editTextTextprenom"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:ems="10"
        android:inputType="text"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="371dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewage"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="36dp"
        android:text="Age:"
        app:layout_constraintEnd_toStartOf="@+id/editTextNumberage"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextprenom" />

    <EditText
        android:id="@+id/editTextNumberage"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextprenom"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="185dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:text="Button"
        app:layout_constraintTop_toBottomOf="@+id/textViewage"
        tools:layout_editor_absoluteX="-16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>